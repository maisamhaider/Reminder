<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/mainindivduallayout"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp" />

    <TextView
        android:maxWidth="150dp"
        android:id="@+id/noteTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="1dp"
        android:layout_toEndOf="@+id/checkbox"
        android:hint="check" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="22dp"
        android:layout_toEndOf="@+id/noteTextView"
        android:textSize="10sp"
        android:gravity="center" />

    <ImageView
        android:id="@+id/subtasksImageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/AttachmentImageView"
        android:gravity="center"
        android:src="@mipmap/subtasks_foreground" />

    <ImageView
        android:id="@+id/AttachmentImageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/dateTextView"
        android:gravity="center"
        android:src="@drawable/ic_attach_file_black_24dp" />

    <ImageView
        android:id="@+id/repeatTaskIv"
        android:layout_width="15sp"
        android:layout_marginTop="15dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="18dp"
        android:layout_toEndOf="@+id/subtasksImageView"
        android:src="@drawable/repeat_icon" />
    <ImageView
        android:id="@+id/deleteSingletaskIv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:src="@drawable/clear_foreground" />


</RelativeLayout>