<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="horizontal">


    <ImageView
        android:layout_marginEnd="20dp"
        android:id="@+id/edit_deleteTaskIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/colorMud"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/edit_deleteTaskIV"
        app:layout_constraintEnd_toEndOf="@+id/edit_deleteTaskIV"
        app:layout_constraintStart_toStartOf="@+id/edit_deleteTaskIV"
        app:layout_constraintTop_toTopOf="@+id/edit_deleteTaskIV" />

    <TextView

        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_marginStart="20dp"
        android:id="@+id/edit_MarkAsDoneIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent"
      />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/edit_MarkAsDoneIV"
        app:layout_constraintEnd_toEndOf="@+id/edit_MarkAsDoneIV"
        app:layout_constraintStart_toStartOf="@+id/edit_MarkAsDoneIV"
        app:layout_constraintTop_toTopOf="@+id/edit_MarkAsDoneIV" />
</androidx.constraintlayout.widget.ConstraintLayout>