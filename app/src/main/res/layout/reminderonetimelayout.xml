<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/oneTimeHorizontalScrollView"
    android:scrollbars="none">

        <LinearLayout
            android:id="@+id/editTagsLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/edit_later_todayLL"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:background="@color/colorBlueGray"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/later_todayIv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/notification_foreground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Later Today" />

                <TextView
                    android:id="@+id/edit_latertodayTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="time" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_thisEveningLL"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:background="@color/colorBlueGray"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/this_EveningIv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/notification_active_foreground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="This Evening" />

                <TextView
                    android:id="@+id/editThis_EveningTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="time" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_tomorrowLL"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:background="@color/colorBlueGray"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tomorrowIv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/notification_active_foreground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/tomorrow" />

                <TextView
                    android:id="@+id/editTimeTomorrowTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_nextWeekLL"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:background="@color/colorBlueGray"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/nextWeekIv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/notification_active_foreground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Next Week" />

                <TextView
                    android:id="@+id/ediTimeNextweekTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="time" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_somedayLL"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:background="@color/colorBlueGray"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/edit_somedayIv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/notification_active_foreground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Someday" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_customLL"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:background="@color/colorBlueGray"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/edit_customIv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/notification_active_foreground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="custom" />


            </LinearLayout>

        </LinearLayout>


</HorizontalScrollView>