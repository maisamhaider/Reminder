    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/sortTasksItemLL"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/sort"/>
        <TextView
            android:text="Sorted In :"
            android:textColor="@color/colorMainYellowOne"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/sortAscedAndDecendTv"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:text="Default Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/clearCompletedTasksItemLL"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/trash"/>
        <TextView
            android:text="Clear Completed Tasks"
            android:textColor="@color/colorMainYellowOne"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

