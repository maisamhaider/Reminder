<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:orientation="vertical">

        <com.alexzh.circleimageview.CircleImageView
            android:id="@+id/Profile_CircleImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center|top"
            app:layout_anchorGravity="center" />
        <ImageView
            android:id="@+id/profileEditIv"
            android:layout_width="29dp"
            android:layout_height="27dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="-25dp"
            android:src="@drawable/circle_camera_foreground" />

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/person_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="person123"
                android:maxLines="1"
                android:maxLength="30"
                android:textColor="@color/colorBlackType"
                app:layout_anchorGravity="bottom|center" />

        <ImageView
            android:id="@+id/personNameEditIv"
            android:layout_width="29dp"
            android:layout_height="27dp"
            android:layout_gravity="center|top"
            android:src="@drawable/edit_person_name_pencil_foreground" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>